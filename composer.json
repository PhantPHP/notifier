{
    "name": "phant/notifier",
    "description": "Manage notifications easily",
    "license": "MIT",
    "keywords": ["notification manager", "notification component", "notification service", "notification sender", "notifier manager", "notifier component", "notifier service", "notifier sender"],
    "authors": [
        {
            "name": "Lenny ROUANET",
            "email": "lennyrouanet@users.noreply.github.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "phant/data-structure": "4.*",
        "phant/email-sender": "2.*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "3.*",
        "phpstan/phpstan": "1.*",
        "phpunit/phpunit": "9.*"
    },
    "scripts": {
        "lint": "vendor/bin/php-cs-fixer fix ./ --rules=@PSR12",
        "analyse": "vendor/bin/phpstan analyse component --memory-limit=4G",
        "test": "vendor/bin/phpunit test --testdox",
        "coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit -d memory_limit=4G"
    },
    "autoload": {
        "psr-4": {
            "Phant\\Notifier\\": "component/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fixture\\": "fixture",
            "Test\\": "test"
        }
    }
}
